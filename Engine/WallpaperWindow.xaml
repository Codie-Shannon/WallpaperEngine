<Window x:Class="Engine.WallpaperWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Engine"
        mc:Ignorable="d"
        Title="WallpaperWindow" Height="450" Width="800" Loaded="Window_Loaded" ResizeMode="NoResize" ShowInTaskbar="True" WindowStyle="None" Background="Black">
    <Grid>
        <Viewbox>
            <TextBlock Text="Loading..." Foreground="White" TextAlignment="Center" FontSize="50" FontWeight="Bold" Margin="0,186,0,187"/>
        </Viewbox>
        <MediaElement x:Name="me_Wallpaper" Source="MediaSources/Cosmic_Wolf.mp4" IsMuted="True" MediaEnded="MediaElement_MediaEnded"/>
    </Grid>
</Window>
